{
  "name": "codependence",
  "version": "0.2.2",
  "main": "dist/index.cjs",
  "description": "Checks `codependencies` in package.json files to ensure dependencies are up-to-date 🤼‍♀️",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "codependence": "dist/index.cjs",
    "codep": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup src/index.ts --format esm,cjs --dts",
    "cmd:node:test-fail-run": "node dist/index.js --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug",
    "cmd:node:test-pass-run": "node dist/index.js --config './test/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './test/' --debug",
    "cmd:ts-node:test-search": "ts-node src/index.ts --rootDir './test/' --debug --searchPath './test/.codependencerc' --isTestingCLI",
    "cmd:ts-node:test-fail-run": "ts-node src/index.ts --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug",
    "cmd:ts-node:test-pass-run": "ts-node src/index.ts --config './test/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './test/' --debug",
    "cmd:ts-node:test-update-run": "ts-node src/index.ts --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug --isTesting",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "coverage": "vitest run --coverage",
    "husky-setup": "if [[ ! -n '/.husky' ]]; then (husky install && pnpm husky-setup:commit-msg && pnpm husky-setup:post-merge && pnpm husky-setup:pre-commit); fi",
    "husky-setup:commit-msg": "npx husky add .husky/commit-msg 'pnpm run commit-msg'",
    "husky-setup:post-merge": "npx husky add .husky/post-merge 'pnpm run setup'",
    "husky-setup:pre-commit": "npx husky add .husky/pre-commit 'pnpm run pre-commit'",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pre-commit": "lint-staged",
    "prepare": "is-ci || pnpm husky-setup",
    "prepublishOnly": "pnpm build",
    "release": "release-it",
    "setup": "pnpm install --reporter=silent && pnpm build",
    "test": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "dependencies": {
    "commander": "^9.3.0",
    "cosmiconfig": "^7.0.1",
    "fast-glob": "^3.2.11",
    "fs-extra": "^10.1.0",
    "gradient-string": "^2.0.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.0.2",
    "@commitlint/config-conventional": "^17.0.2",
    "@commitlint/prompt-cli": "^17.0.0",
    "@types/fs-extra": "^9.0.13",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^18.0.0",
    "@types/npm-registry-fetch": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^5.27.1",
    "@typescript-eslint/parser": "^5.27.1",
    "c8": "^7.11.3",
    "eslint": "^8.17.0",
    "eslint-config-prettier": "^8.5.0",
    "husky": "^8.0.1",
    "is-ci": "^3.0.1",
    "lint-staged": "13.0.2",
    "path-exists": "^5.0.0",
    "release-it": "^15.0.0",
    "stdouttojson": "^0.3.5",
    "ts-node": "^10.8.1",
    "tslib": "^2.4.0",
    "tsup": "^6.1.0",
    "tsutils": "^3.21.0",
    "typescript": "^4.7.3",
    "vitest": "^0.15.0"
  },
  "keywords": [
    "peerDependencies",
    "optionalDependencies",
    "optional-dependencies",
    "dependencies",
    "devDependencies",
    "versioning",
    "versions",
    "semver"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s"
    }
  }
}
