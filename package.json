{
  "name": "codependence",
  "version": "1.0.0-1",
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "devDependencies": {
    "bun-types": "^1.3.3",
    "prettier": "^3.6.2",
    "release-it": "^19.0.6",
    "turbo": "^2.6.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "codependence": "dist/index.js",
    "cdp": "dist/index.js"
  },
  "codependence": {
    "codependencies": [
      "bun-types",
      "prettier",
      "release-it",
      "turbo",
      "typescript"
    ]
  },
  "description": "Checks `codependencies` in package.json files to ensure dependencies are up-to-date ðŸ¤¼â€â™€ï¸",
  "engines": {
    "node": ">=18"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "peerDependencies",
    "optionalDependencies",
    "optional-dependencies",
    "dependencies",
    "devDependencies",
    "versioning",
    "versions",
    "semver"
  ],
  "license": "Elastic-2.0",
  "packageManager": "bun@1.3.2",
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s"
    }
  },
  "scripts": {
    "build": "turbo run build-dist",
    "build-dist": "bun build src/index.ts --format esm --outfile dist/index.js --target node && bun build src/index.ts --format cjs --outfile dist/index.cjs --target node && bunx tsc --emitDeclarationOnly --declaration --outDir dist --rootDir src",
    "clean-dist": "rm -rf dist",
    "clean": "turbo run clean-dist && cd page/app && rm -rf dist",
    "cmd:node:test-fail-run": "node dist/index.js --config './tests/unit/fixtures/test-fail-package.json' --files 'test-fail-package.json' --rootDir './tests/unit/fixtures/' --debug",
    "cmd:node:test-pass-run": "node dist/index.js --config './tests/unit/fixtures/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './tests/unit/fixtures/' --debug",
    "cmd:bun:test-search": "bun src/index.ts --rootDir './tests/unit/fixtures/' --debug --searchPath './tests/unit/fixtures/.codependencerc' --isTestingCLI",
    "cmd:bun:test-fail-run": "bun src/index.ts --config './tests/unit/fixtures/test-fail-package.json' --files 'test-fail-package.json' --rootDir './tests/unit/fixtures/' --debug",
    "cmd:bun:test-pass-run": "bun src/index.ts --config './tests/unit/fixtures/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './tests/unit/fixtures/' --debug",
    "cmd:bun:test-update-run": "bun src/index.ts --config './tests/unit/fixtures/test-fail-package.json' --files 'test-fail-package.json' --rootDir './tests/unit/fixtures/' --debug --isTesting",
    "cmd:bun:test-codependencies-cli": "bun src/index.ts -c './tests/unit/fixtures/test-fail-package.json' --files 'test-fail-package.json' -cds 'lodash' '{ \"fs-extra\": \"10.0.1\" }' --rootDir './tests/unit/fixtures/' --debug --isTesting",
    "coverage": "bun test --coverage",
    "dev": "turbo run dev",
    "docs:dev": "turbo run dev --filter=@codependence/docs",
    "docs:build": "turbo run build --filter=@codependence/docs",
    "docs:preview": "turbo run preview --filter=@codependence/docs",
    "format-src": "bun x prettier --write src",
    "format-test": "bun x prettier --write tests",
    "format-app": "bun x prettier --write page/app",
    "format": "turbo run format-src && turbo run format-test && turbo run format-app",
    "lint": "turbo run lint-src",
    "lint-fix": "bun x oxlint . --fix",
    "lint-src": "bun x oxlint src",
    "lint:fix": "bun x oxlint src/**/*.ts --fix",
    "prepare": "sh scripts/setup-hooks.sh",
    "prepublishOnly": "npm run clean-dist && npm run build-dist",
    "preview": "turbo run preview",
    "release": "release-it",
    "setup": "bun install && bun run build",
    "test": "turbo run test-src",
    "test-src": "bun test",
    "typecheck": "turbo run typecheck-src",
    "typecheck-src": "tsc --noEmit",
    "update": "echo 'temp default' && bun update"
  },
  "type": "module",
  "types": "dist/index.d.ts",
  "workspaces": [
    "page/app"
  ]
}
