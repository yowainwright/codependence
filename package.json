{
  "name": "codependence",
  "version": "0.2.6",
  "main": "dist/index.cjs",
  "description": "Checks `codependencies` in package.json files to ensure dependencies are up-to-date 🤼‍♀️",
  "type": "module",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "bin": {
    "codependence": "dist/index.cjs",
    "cdp": "dist/index.cjs"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "turbo run build-dist",
    "build-dist": "tsup src/index.ts --format esm,cjs --dts",
    "clean-dist": "rimraf dist",
    "clean": "turbo run clean-dist",
    "cmd:node:test-fail-run": "node dist/index.js --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug",
    "cmd:node:test-pass-run": "node dist/index.js --config './test/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './test/' --debug",
    "cmd:ts-node:test-search": "ts-node src/index.ts --rootDir './test/' --debug --searchPath './test/.codependencerc' --isTestingCLI",
    "cmd:ts-node:test-fail-run": "ts-node src/index.ts --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug",
    "cmd:ts-node:test-pass-run": "ts-node src/index.ts --config './test/test-pass-package.json' --files 'test-pass-package.json'  --rootDir './test/' --debug",
    "cmd:ts-node:test-update-run": "ts-node src/index.ts --config './test/test-fail-package.json' --files 'test-fail-package.json' --rootDir './test/' --debug --isTesting",
    "cmd:ts-node:test-codependencies-cli": "ts-node src/index.ts -c './test/test-fail-package.json' --files 'test-fail-package.json' -cds 'lodash' '{ \"fs-extra\": \"10.0.1\" }' --rootDir './test/' --debug --isTesting",
    "commit": "git-cz",
    "commit-msg": "commitlint --edit $1",
    "coverage": "vitest run --coverage",
    "dev": "pnpm --filter @codependence/app run app-dev",
    "lint": "turbo run lint-src",
    "lint-fix": "eslint . --fix",
    "lint-src": "eslint src --ext .ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "pre-commit": "lint-staged",
    "prepare": "is-ci || husky install",
    "prepublishOnly": "pnpm run test && pnpm run build",
    "preview": "pnpm --filter @codependence/app app-preview",
    "release": "release-it",
    "setup": "pnpm install --reporter=silent && pnpm build",
    "test": "turbo run test-src",
    "test-src": "vitest run",
    "typecheck": "turbo run typecheck-src",
    "typecheck-src": "tsc --noEmit",
    "update": "echo 'temp default' && pnpm update"
  },
  "author": "Jeff Wainwright <yowainwright@gmail.com> (https://jeffry.in)",
  "license": "MIT",
  "dependencies": {
    "commander": "^11.0.0",
    "cosmiconfig": "^8.2.0",
    "fast-glob": "^3.3.1",
    "gradient-string": "^2.0.2",
    "ora": "5.4.1"
  },
  "devDependencies": {
    "@commitlint/cli": "^17.7.1",
    "@commitlint/config-conventional": "^17.7.0",
    "@commitlint/prompt-cli": "^17.7.1",
    "@types/gradient-string": "^1.1.2",
    "@types/node": "^20.5.3",
    "@types/npm-registry-fetch": "^8.0.4",
    "@typescript-eslint/eslint-plugin": "^6.4.1",
    "@typescript-eslint/parser": "^6.4.1",
    "c8": "^8.0.1",
    "cross-env": "^7.0.3",
    "eslint": "^8.47.0",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^8.0.3",
    "is-ci": "^3.0.1",
    "lint-staged": "14.0.1",
    "path-exists": "^5.0.0",
    "prettier": "^3.0.2",
    "release-it": "^16.1.5",
    "stdouttojson": "^0.7.2",
    "ts-node": "^10.9.1",
    "tslib": "^2.6.2",
    "tsup": "^7.2.0",
    "tsutils": "^3.21.0",
    "turbo": "^1.10.12",
    "type-fest": "^4.2.0",
    "typescript": "^5.1.6",
    "vite": "^3.2.7",
    "vitest": "^0.34.2"
  },
  "keywords": [
    "peerDependencies",
    "optionalDependencies",
    "optional-dependencies",
    "dependencies",
    "devDependencies",
    "versioning",
    "versions",
    "semver"
  ],
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "header-max-length": [
        2,
        "always",
        120
      ]
    }
  },
  "lint-staged": {
    "*.{ts,json}": [
      "eslint --fix",
      "prettier --write"
    ]
  },
  "release-it": {
    "git": {
      "commitMessage": "chore: release %s"
    }
  },
  "engines": {
    "node": ">=18",
    "pnpm": ">=8"
  }
}
