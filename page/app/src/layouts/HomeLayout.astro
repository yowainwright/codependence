---
import "@fontsource-variable/outfit";
import Header from "../components/home/Header.astro";
import Footer from "../components/common/Footer.astro";
import "../styles/global.css";
import "../styles/themes.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
import { resolveUrl } from "../utils/urlResolver";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Codependence - A powerful JavaScript utility for managing and validating critical dependencies across your projects. Keep your dependencies up-to-date and consistent." />
    <meta name="viewport" content="width=device-width" />
    <meta name="base-url" content={import.meta.env.BASE_URL} />
    <link rel="icon" type="image/svg+xml" href={resolveUrl("logos/codependence.svg")} />
    <link rel="icon" type="image/png" sizes="32x32" href={resolveUrl("favicon-32x32.png")} />
    <link rel="icon" type="image/png" sizes="16x16" href={resolveUrl("favicon-16x16.png")} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Codependence</title>
  </head>
  <body>
    <div>
      <Header />
      <slot />
      <Footer />
    </div>
  </body>
</html>
