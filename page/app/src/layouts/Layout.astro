---
import SideBar from "../components/docs/SideBar.astro";
import DocsHeader from "../components/docs/DocsHeader.astro";
import Footer from "../components/common/Footer.astro";
import "@fontsource-variable/outfit";
import "../styles/global.css";
import "../styles/themes.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
import { resolveUrl } from "../utils/urlResolver";
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Codependence - A powerful JavaScript utility for managing and validating critical dependencies across your projects. Keep your dependencies up-to-date and consistent." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href={resolveUrl("logos/codependence.svg")} />
    <link rel="icon" type="image/png" sizes="32x32" href={resolveUrl("favicon-32x32.png")} />
    <link rel="icon" type="image/png" sizes="16x16" href={resolveUrl("favicon-16x16.png")} />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Codependence</title>
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <div class="drawer lg:drawer-open flex-1">
        <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
        <div class="drawer-content flex flex-col">
          <DocsHeader />
          <div class="flex-1">
            <slot />
          </div>
        </div>
        <SideBar />
      </div>
      <Footer />
    </div>
  </body>
</html>

<script is:inline>
  const theme = (() => {
    if (typeof localStorage !== "undefined" && localStorage.getItem("theme")) {
      return localStorage.getItem("theme");
    }
    if (window.matchMedia("(prefers-color-scheme: dark)").matches) {
      return "codependence-dark";
    }
    return "codependence-light";
  })();

  document.documentElement.setAttribute("data-theme", theme);
</script>

<style>
  * {
    scroll-behavior: smooth;
  }
</style>
