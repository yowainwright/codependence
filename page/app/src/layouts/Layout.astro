---
import SideBar from "../components/docs/SideBar.astro";
import DocsHeader from "../components/docs/DocsHeader.astro";
import Footer from "../components/common/Footer.astro";
import "@fontsource-variable/outfit";
import "../styles/global.css";
import "../styles/themes.css";

interface Props {
  title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Codependence - A powerful JavaScript utility for managing and validating critical dependencies across your projects. Keep your dependencies up-to-date and consistent." />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/logos/codependence.svg" />
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon-32x32.png" />
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon-16x16.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title} | Codependence</title>
  </head>
  <body>
    <div class="drawer lg:drawer-open">
      <input id="my-drawer-2" type="checkbox" class="drawer-toggle" />
      <div class="drawer-content flex flex-col">
        <DocsHeader />
        <slot />
        <Footer />
      </div>
      <SideBar />
    </div>
  </body>
</html>

<style>
  * {
    scroll-behavior: smooth;
  }
</style>
