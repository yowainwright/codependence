{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build-dist": {
      "dependsOn": ["^build-dist"],
      "inputs": ["src/**/*.{ts,tsx}", "index.html"]
    },
    "lint-src": {
      "dependsOn": ["typecheck-src"],
      "inputs": ["src/**/*.{tsx,ts}"]
    },
    "typecheck-src": {
      "inputs": ["src/**/*.ts"]
    },
    "format-src": {
      "inputs": ["src/**/*.ts"]
    },
    "format-test": {
      "inputs": ["tests/**/*.ts"]
    },
    "format-app": {
      "inputs": ["page/app/**/*.{ts,tsx}"]
    },
    "test-src": {
      "inputs": ["src/**/*.ts", "tests/**/*.ts"]
    },
    "dev": {
      "cache": false,
      "persistent": true,
      "inputs": ["src/**/*", "page/app/**/*"]
    },
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**"],
      "inputs": ["src/**/*", "page/app/**/*"]
    },
    "preview": {
      "dependsOn": ["build"],
      "cache": false,
      "persistent": true
    }
  }
}
