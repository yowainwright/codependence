{
  "$schema": "https://turbo.build/schema.json",
  "tasks": {
    "build-dist": {
      "dependsOn": ["^build-dist"],
      "inputs": ["src/**/*.{ts,tsx}", "index.html"]
    },
    "lint-src": {
      "dependsOn": ["typecheck-src"],
      "inputs": ["src/**/*.{tsx,ts}"]
    },
    "typecheck-src": {
      "inputs": ["src/**/*.ts"]
    },
    "format-src": {
      "inputs": ["src/**/*.ts"]
    },
    "format-test": {
      "inputs": ["test/**/*.ts"]
    },
    "format-app": {
      "inputs": ["page/app/**/*.{ts,tsx}"]
    },
    "test-src": {
      "inputs": ["src/**/*.ts", "test/**/*.ts"]
    }
  }
}
